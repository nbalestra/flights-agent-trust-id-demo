# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here-generate-with-openssl-rand-base64-32

# Keycloak Configuration
KEYCLOAK_ISSUER=https://lemur-8.cloud-iam.com/auth/realms/maf
KEYCLOAK_CLIENT_ID=your-client-id
# KEYCLOAK_CLIENT_SECRET=your-client-secret  # Only needed for confidential clients, leave empty/unset for public clients

# AWS IAM Credentials for Bedrock
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-2

# Bedrock Intent Agent Configuration
BEDROCK_INTENT_AGENT_ID=your_agent_id
BEDROCK_INTENT_ALIAS_ID=your_alias_id

# A2A Agent Configuration (Booking & Search Agents)
# Uses Google A2A Protocol (JSON-RPC format) for agent-to-agent communication
A2A_BOOKING_AGENT_URL=https://your-booking-agent-url.com/agent
A2A_SEARCH_AGENT_URL=https://your-search-agent-url.com/agent

# Auth0 Step-Up Authentication Configuration
# Used for secondary authentication when booking flights (step-up auth)
# NEXT_PUBLIC_ prefix makes it available to the browser for the authorization redirect
NEXT_PUBLIC_AUTH0_STEPUP_CLIENT_ID=your-auth0-client-id
AUTH0_STEPUP_REDIRECT_URI=http://localhost:3000/callback

# Node Environment
NODE_ENV=development
